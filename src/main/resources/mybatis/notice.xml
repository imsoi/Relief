<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "notice">

	<select id = "list" resultType="notice">
		SELECT * FROM notice
	</select>
	
	<select id="item" resultType="notice">
		SELECT * FROM notice
		WHERE ncode=#{ncode}
	</select>
	
	<insert id="add">					
	<!-- #{adminId} , #{cAdminId}-->
		INSERT INTO notice 
		VALUES (NULL, #{title}, #{contents}, now(), now(), null, null)
	</insert>
	
	<update id="update">
		UPDATE notice
		SET title=#{title}, contents=#{contents}
		WHERE ncode=#{ncode}
	</update>
	
	<delete id="delete">
		DELETE FROM notice 
		WHERE ncode=#{ncode}
	</delete>
	
</mapper>