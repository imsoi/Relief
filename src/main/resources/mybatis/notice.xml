<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "notice">

	<sql id="search">
		<where>		
			<if test="search == 1">
				title LIKE CONCAT(CONCAT('%', #{keyword}), '%')
			</if>
		</where>
	</sql>

	<select id = "list" resultType="notice">
		SELECT * FROM notice
	<include refid="search"></include> 
		LIMIT #{offset}, #{perPage}
	</select>
	
	<select id="total" resultType="Integer">
		SELECT COUNT(*) FROM notice
	<include refid="search"></include>   <!-- 안해주면 검색했을 때 list값 있는 만큼 페이지 번호가 다 나옴 -->
	</select>
	
	<select id="item" resultType="notice">
		SELECT * FROM notice
		WHERE ncode=#{ncode}
	</select>
	
	<insert id="add">					
	<!-- #{adminId} , #{cAdminId}-->
		INSERT INTO notice 
		VALUES (NULL, #{title}, #{contents}, now(), now(), null, null)
	</insert>
	
	<update id="update">
		UPDATE notice
		SET title=#{title}, contents=#{contents}
		WHERE ncode=#{ncode}
	</update>
	
	<delete id="delete">
		DELETE FROM notice 
		WHERE ncode=#{ncode}
	</delete>
	
</mapper>